<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>
  <body id="samples">

    {{>menu}}

    <div id="content" class="ui padded grid relaxed">
      <div id="doc" class="column eight wide">
        <div class="doc-overview">
          <h2 class="ui dividing header" data-se="overview-doc-header">
            My Tokens
          </h2>
          <p>
          Here is your tokens information:
          </p>
        </div>
        <table class="ui table compact collapsing">
          <thead>
            <tr>
              <th>Claim</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            {{#attributes}}
              <tr>
                <td>{{0}}</td>
                <td id="claim-{{0}}">{{1}}</td>
              </tr>
            {{/attributes}}
          </tbody>
        </table>
        <p>
          <strong>Expires At:</strong> {{#expiresAt}}{{expiresAt}}{{/expiresAt}}
        </p>
      </div>
      {{>server-config}}
      <script>
        document.getElementById('refreshTokenButton').addEventListener('click', function () {
          fetch('/refreshToken', { method: 'POST' })
            .then(response => response.json())
            .then(data => console.log(data))
            .catch(error => console.error('Error:', error));
        });
      </script>
    </div>
  </body>
</html>
